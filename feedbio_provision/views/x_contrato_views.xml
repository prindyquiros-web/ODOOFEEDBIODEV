<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <!-- Vista tipo árbol -->
    <record id="view_x_contrato_tree" model="ir.ui.view">
      <field name="name">x.contrato.tree</field>
      <field name="model">x.contrato</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="proveedor_id"/>
          <field name="fecha_inicio"/>
          <field name="producto"/>
        </tree>
      </field>
    </record>

    <!-- Vista tipo formulario -->
    <record id="view_x_contrato_form" model="ir.ui.view">
      <field name="name">x.contrato.form</field>
      <field name="model">x.contrato</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name"/>
              <field name="proveedor_id"/>
              <field name="fecha_inicio"/>
              <field name="fecha_fin"/>
              <field name="producto"/>
              <field name="observaciones"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción para mostrar la vista -->
    <record id="action_x_contrato" model="ir.actions.act_window">
      <field name="name">Contratos</field>
      <field name="res_model">x.contrato</field>
      <field name="view_mode">tree,form</field>
    </record>
  </data>
</odoo>

  
