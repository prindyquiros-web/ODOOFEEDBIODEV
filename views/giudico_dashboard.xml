    <style>
      /* Fondo a pantalla completa */
      .g-main-wrap{
        position: relative;
        min-height: 100vh;
        display: flex; 
        flex-direction: column;
        justify-content: center;
        align-items: center;
        overflow: hidden;
      }
      .g-bg{
        position: absolute; inset: 0;
        background-image: url('/feedbio_provision_custom/static/src/img/backgroundweb.png');
        background-size: cover; background-position: center; background-repeat: no-repeat;
        transform: scale(1.02);
        filter: saturate(1.05);
      }
      /* Capa para mejorar contraste de textos */
      .g-overlay{
        position:absolute; inset:0;
        background: radial-gradient(ellipse at center, rgba(0,0,0,.15), rgba(0,0,0,.35));
      }

      /* Contenido centrado */
      .g-content{
        position: relative;
        z-index: 2;
        width: 100%;
        max-width: 1100px;
        padding: 28px 20px 48px;
        text-align: center;
      }

      /* Logo */
      .g-logo{
       height: clamp(100px, 20vw, 200px);

        object-fit: contain;
        margin: 0 auto 12px;
        display:block;
        filter: drop-shadow(0 2px 6px rgba(0,0,0,.25));
      }

      /* T√≠tulo */
      .g-title{
            font-size: clamp(20px, 2.4vw, 28px);
            letter-spacing: .5px;
            color: #ffffffff;
            font-weight: 600;
            text-shadow: 0 2px 6px rgba(3, 42, 9, 0.45);
            margin: 0 0 22px;
      }

      /* Contenedor de botones */
      .g-grid{
        display: grid;
        grid-template-columns: repeat(5, minmax(220px,1fr));
        gap: 16px;
        justify-content: center;
      }
      @media (max-width: 1200px){ .g-grid{ grid-template-columns: repeat(3, minmax(220px,1fr)); } }
      @media (max-width: 780px){  .g-grid{ grid-template-columns: repeat(2, minmax(200px,1fr)); } }
      @media (max-width: 520px){  .g-grid{ grid-template-columns: 1fr; } }

      /* Bot√≥n base existente, mejorado visualmente */
      .giudico-btn{
        display: inline-flex; align-items: center; justify-content: center;
        gap: 10px;
        background: #16a34a; /* verde */
        color: #ffffff;
        padding: 14px 18px;
        border-radius: 12px;
        min-height: 56px;
        text-decoration: none;
        font-weight: 700;
        letter-spacing: .3px;
        box-shadow: 0 8px 18px rgba(0,0,0,.18), inset 0 -2px 0 rgba(0,0,0,.05);
        border: 1px solid rgba(255,255,255,.14);
        transition: transform .18s ease, box-shadow .18s ease, background .18s ease, filter .18s ease;
        backdrop-filter: blur(1.5px);
      }
      .giudico-btn:hover{
        transform: translateY(-2px);
        background: #15803d; /* un pel√≠n m√°s oscuro */
        box-shadow: 0 12px 22px rgba(0,0,0,.22);
        filter: saturate(1.08);
      }
      .g-emoji{ font-size: 18px; line-height: 1; }

      /* Borde suave del contenedor global */
      .g-frame{
        position: absolute; inset: 12px;
        border-radius: 16px;
        box-shadow: inset 0 0 0 1px rgba(255,255,255,.08);
        pointer-events: none;
      }

