<odoo>
  <record id="view_campana_tree" model="ir.ui.view">
    <field name="name">x.campana.tree</field>
    <field name="model">x.campana</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="anio_final"/>
      </tree>
    </field>
  </record>

  <record id="view_campana_form" model="ir.ui.view">
    <field name="name">x.campana.form</field>
    <field name="model">x.campana</field>
    <field name="arch" type="xml">
      <form string="Campaña">
        <sheet>
          <group>
            <field name="name"/>
            <field name="anio_final"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_campana" model="ir.actions.act_window">
    <field name="name">Campañas</field>
    <field name="res_model">x.campana</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>

