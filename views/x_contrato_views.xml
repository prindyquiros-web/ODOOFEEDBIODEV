<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>

    <!-- Vista tipo árbol -->
    <record id="view_x_contrato_tree_v3" model="ir.ui.view">
      <field name="name">x.contrato.tree.v3</field>
      <field name="model">x.contrato</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="campana_id"/>
          <field name="anio_campana"/>
          <field name="proveedor_id"/>
          <field name="codigo_proveedor"/>
          <field name="fecha_inicio"/>
          <field name="producto"/>
        </tree>
      </field>
    </record>

    <!-- Vista tipo formulario -->
    <record id="view_x_contrato_form_v3" model="ir.ui.view">
      <field name="name">x.contrato.form.v3</field>
      <field name="model">x.contrato</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="name" readonly="1"/>
              <field name="company_id"/>
              <field name="campana_id"/>
              <field name="codigo_proveedor" readonly="1"/>
              <field name="proveedor_id" context="{'active_test': False}"/>
              <field name="fecha_inicio"/>
              <field name="fecha_fin"/>
              <field name="producto"/>
              <field name="cantidad_total"/>
              <field name="precio"/>
              <field name="observaciones"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Acción que abre lista + formulario -->
    <record id="action_x_contrato" model="ir.actions.act_window">
      <field name="name">Crear contratos</field>
      <field name="res_model">x.contrato</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú para Crear contratos -->
    <menuitem id="menu_crear_contratos"
              name="Crear contratos"
              parent="menu_provision_soya_root"
              action="action_x_contrato"
              sequence="1"/>
  </data>
</odoo>

