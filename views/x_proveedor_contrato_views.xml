<odoo>
  <record id="view_proveedor_tree" model="ir.ui.view">
    <field name="name">x.proveedor.contrato.tree</field>
    <field name="model">x.proveedor.contrato</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="codigo"/>
      </tree>
    </field>
  </record>

  <record id="view_proveedor_form" model="ir.ui.view">
    <field name="name">x.proveedor.contrato.form</field>
    <field name="model">x.proveedor.contrato</field>
    <field name="arch" type="xml">
      <form string="Proveedor">
        <sheet>
          <group>
            <field name="name"/>
            <field name="codigo"/>
            <field name="partner_id"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_proveedor_contrato" model="ir.actions.act_window">
    <field name="name">Proveedores</field>
    <field name="res_model">x.proveedor.contrato</field>
    <field name="view_mode">tree,form</field>
  </record>
</odoo>
